@model TaxiCameBack.Website.Models.ChangePasswordViewModel

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        @using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post, new { @class = "form-forgotpassword" }))
        {
            @Html.ValidationSummary(true)
            @Html.AntiForgeryToken()

            <fieldset>
                <legend>@ViewBag.Title</legend>
                <p>
                    @($"New passwords are required to be a minimum of {Membership.MinRequiredPasswordLength-1} characters in length.")
                </p>
                <div class="form-group">
                    @Html.LabelFor(m => m.OldPassword)
                    @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.OldPassword)
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.NewPassword)
                    @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.NewPassword)
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.ConfirmPassword)
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.ConfirmPassword)
                </div>
                <div class="submit-holder">
                    <button type="submit" class="btn-mvc-green btn-mvc-large">ChangePassword</button>
                </div>
            </fieldset>

        }
    </div>
</div>