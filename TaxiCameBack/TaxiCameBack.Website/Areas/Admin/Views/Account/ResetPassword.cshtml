@model TaxiCameBack.Website.Areas.Admin.Models.MemberViewModels.ResetPasswordViewModel

@{
    Layout = null;
}

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        @using (Html.BeginForm("ResetPassword", "Account", new { id = Model.Email, token = Model.Token }, FormMethod.Post, new { @class = "form-resetpassword" }))
        {
            @Html.ValidationSummary(true)
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.Token)
            @Html.HiddenFor(m => m.Email)

            <fieldset>
                <legend>@ViewBag.Title</legend>
                <div class="form-group">
                    @Html.LabelFor(m => m.NewPassword)
                    @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.NewPassword)
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.ConfirmPassword)
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.ConfirmPassword)
                </div>
                <div class="submit-holder">
                    <button type="submit" class="btn-mvc-green btn-mvc-large">Change Password</button>
                </div>
            </fieldset>

        }
    </div>
</div>