@using TaxiCameBack.Core.Constants
@using TaxiCameBack.Website.Application.Security
@{
    var currentController = TempData[AppConstants.CurrentController].ToString();
    var currentAction = TempData[AppConstants.CurrentAction].ToString();
}
<!-- sidebar: style can be found in sidebar.less -->
<section class="sidebar">
    <!-- sidebar menu: : style can be found in sidebar.less -->
    <ul class="sidebar-menu">
        <li class="header">MAIN NAVIGATION</li>
        @{
            if (!string.IsNullOrEmpty(SessionPersister.Username) 
                && SessionPersister.Roles.Contains(AppConstants.AdminRoleName))
            {
                <li class="@(currentController == "account" ? "active" : "")  treeview">
                    <a href="@Url.Action("Index", "Account")">
                        <i class="fa fa-users"></i> <span>@SideBar.account</span>
                        <span class="pull-right-container">
                            <i class="fa fa-angle-left pull-right"></i>
                        </span>
                    </a>
                </li>
            }
            if (!string.IsNullOrEmpty(SessionPersister.Username)
                && SessionPersister.Roles.Contains(AppConstants.AdminRoleName))
            {
                <li class="@(currentController == "settings" ? "active" : "")  treeview">
                    <a href="@Url.Action("Index", "Settings")">
                        <i class="fa fa-cogs"></i> <span>@SideBar.setting</span>
                        <span class="pull-right-container">
                            <i class="fa fa-angle-left pull-right"></i>
                        </span>
                    </a>
                </li>
            }
            if (!string.IsNullOrEmpty(SessionPersister.Username)
                && SessionPersister.Roles.Contains(AppConstants.AdminRoleName))
            {
                <li class="@(currentController == "log" ? "active" : "")  treeview">
                    <a href="@Url.Action("Index", "Log")">
                        <i class="fa fa-edit"></i> <span>@SideBar.log</span>
                        <span class="pull-right-container">
                            <i class="fa fa-angle-left pull-right"></i>
                        </span>
                    </a>
                </li>
            }
            if (!string.IsNullOrEmpty(SessionPersister.Username)
                && SessionPersister.Roles.Contains(AppConstants.StandardMembers))
            {
                <li class="@(currentController == "schedule" ? "active" : "")  treeview">
                    <a href="@Url.Action("Index", "Schedule")">
                        <i class="fa fa-calendar"></i> <span>@SideBar.schedule</span>
                        <span class="pull-right-container">
                            <i class="fa fa-angle-left pull-right"></i>
                        </span>
                    </a>
                </li>
            }
            if (!string.IsNullOrEmpty(SessionPersister.Username)
                && SessionPersister.Roles.Contains(AppConstants.StandardMembers))
            {
                <li class="@(currentController == "notification" ? "active" : "")  treeview">
                    <a href="@Url.Action("Index", "Notification")">
                        <i class="fa fa-calendar"></i> <span>Notification</span>
                        <span class="pull-right-container">
                            <i class="fa fa-angle-left pull-right"></i>
                        </span>
                    </a>
                </li>
            }
        }
            
    </ul>
</section>
<!-- /.sidebar -->
