@model TaxiCameBack.Website.Areas.Admin.Models.NotificationListViewModel

@{
    ViewBag.Title = "Notification manage";
}

<link href="@Url.Content("~/Scripts/plugins/datatables/dataTables.bootstrap.css")" rel="stylesheet" />
<script src="@Url.Content("~/Scripts/plugins/datatables/jquery.dataTables.min.js")"></script>
<script src="@Url.Content("~/Scripts/plugins/datatables/dataTables.bootstrap.min.js")"></script>
<section class="content-header">
    <h1>
        @ViewBag.Title
    </h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index")"><i class="fa fa-dashboard"></i> @HomeBackEnd.home_breadcrumb</a></li>
        <li class="active">@ViewBag.Title</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <!-- Info boxes -->
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">@ViewBag.Title</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="example2" class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>No</th>
                                <th>Customer name</th>
                                <th>Customer phone number</th>
                                <th>Near Location</th>
                                <th>Create Date</th>
                                <th>Received</th>
                                <th>Received Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{ int count = 0;}
                            @foreach (var user in Model.Notifications)
                            {
                                count++;
                                <tr>
                                    <td>
                                        @count
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => user.CustomerFullname)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => user.CustomerPhoneNumber)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => user.NearLocation)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => user.CreateDate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => user.Received)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => user.ReceivedDate)
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
<script>
    $(function () {
        $('#example2').DataTable({
            "paging": true,
            "searching": true,
            "ordering": true,
            "language": {
                "sProcessing": "Đang xử lý...",
                "sLengthMenu": "Xem _MENU_ mục",
                "sZeroRecords": "Không tìm thấy dòng nào phù hợp",
                "sInfo": "Đang xem _START_ đến _END_ trong tổng số _TOTAL_ mục",
                "sInfoEmpty": "Đang xem 0 đến 0 trong tổng số 0 mục",
                "sInfoFiltered": "(được lọc từ _MAX_ mục)",
                "sInfoPostFix": "",
                "sSearch": "Tìm:",
                "sUrl": "",
                "oPaginate": {
                    "sFirst": "Đầu",
                    "sPrevious": "Trước",
                    "sNext": "Tiếp",
                    "sLast": "Cuối"
                }
            }
        });
    });
</script>
